<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.allen.library.shape.ShapeLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginHorizontal="@dimen/m62"
        app:shapeSolidColor="@color/white"
        app:shapeCornersRadius="@dimen/m6"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_pw_oo_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="温馨提示"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/m16"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/m30"
            />

        <com.allen.library.shape.ShapeTextView
            android:id="@+id/tv_pw_oo_sure"
            android:layout_width="match_parent"
            android:layout_height="@dimen/m40"
            android:layout_marginHorizontal="@dimen/m20"
            android:layout_marginBottom="@dimen/m20"
            android:layout_marginTop="@dimen/m24"
            app:shapeSolidColor="@color/blue_07C0C2"
            app:shapeCornersRadius="@dimen/m4"
            android:text="确定"
            android:textSize="@dimen/m16"
            android:textColor="@color/white"
            android:gravity="center"
            />

    </com.allen.library.shape.ShapeLinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>